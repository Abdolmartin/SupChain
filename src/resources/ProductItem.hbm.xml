<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="salesManagement">
	<class name="ProductItem" table="PRODUCT_ITEM">
		<id name="id" column="PRODUCT_ITEM_ID">
			<generator class="native" />
		</id>
	</class>
	
	<class name="ProductReview" table="PRODUCT_REVIEW">
        <id name="id" column="PRODUCT_REVIEW_ID">
            <generator class="native"/>
        </id>
        
        <property name="body" column="BODY" />
        <property name="score" column="SCORE" />
        <property name="date" column="DATE" />
        
		<many-to-one name="customer" column="CUSTOMER_ID" unique="true" class="userManagement.Customer"
			cascade="save-update">
		</many-to-one>
        
		<many-to-one name="product" column="PRODUCT_ID" unique="true" class="salesManagement.Product"
			cascade="save-update">
		</many-to-one>
    </class>

</hibernate-mapping>
