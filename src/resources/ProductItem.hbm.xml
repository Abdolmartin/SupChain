<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="salesManagement">
	<class name="ProductItem" table="PRODUCT_ITEM">
		<id name="id" column="PRODUCT_ITEM_ID">
			<generator class="native" />
		</id>
	</class>
	
	<class name="Product" table="PRODUCT">
        <id name="id" column="PRODUCT_ID">
            <generator class="native"/>
        </id>
        
        <property name="finality" column="FINALITY" type="boolean" />
        
		<list name="reviews" cascade="all">
			<key column="REVIEWS_ID" />
			<list-index column="idx" />
			<one-to-many class="ProductReview" />
		</list>
    </class>

	<class name="ProductReview" table="PRODUCT_REVIEW">
        <id name="id" column="PRODUCT_REVIEW_ID">
            <generator class="native"/>
        </id>
        
        <property name="body" column="BODY" />
        <property name="score" column="SCORE" />
        <property name="date" column="DATE" />
        
		<one-to-one name="customer" class="userManagement.Customer"
			cascade="save-update">
		</one-to-one>
        
		<one-to-one name="product" class="salesManagement.Product"
			cascade="save-update">
		</one-to-one>
    </class>

</hibernate-mapping>
